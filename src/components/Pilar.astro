---
export interface Props {
	pilar_name: string;

	
}

const {pilar_name } = Astro.props;
---

<div class="pilar">
    <div class="pilar-title">
        <h2>{pilar_name}</h2>
    </div>
    <div class="pilar-text">
        <slot />
    </div>

</div>
<style>
    h2{
		font-size: 2rem;
		font-weight: 600;
		margin: 0;
		color: var(--roxo-escuro);
	}
    .pilar-title{
        text-align: center;
        width: 100%;
        height: 100%;
        background-color: var(--amarelo-escuro);
        padding: 1rem;
        margin-bottom: 2rem;
    }
    .pilar-text{
        text-align: justify;
        width: 100%;
        height: 65vh;
        background-color: var(--roxo-claro);
        color: var(--branco);
        padding: 0 1rem;
        
    }
	.pilar {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #f3f3f3;
        padding: 0 1rem;
    }
</style>
