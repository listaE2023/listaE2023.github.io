<style>
    @keyframes fade-in {
        from {
            transform: translateY(50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .fim-de-pagina{
        margin-bottom: 50px;
    }
    .direcao{
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        flex-wrap: wrap;
        margin-bottom: 25px;
    }

    #padding-paragraph{
        color: transparent;
    }
    .animated-component{
        opacity: 0;
        transform: translateY(50px);
        animation: fade-in 1s forwards;
        animation-play-state: paused;
    }

   
    .animate {
        animation-play-state: running;
    }

    .no-animate {
        animation-play-state: paused;
    }
	main {
