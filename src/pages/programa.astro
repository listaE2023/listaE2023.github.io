---
import ProgramaCard from "../components/ProgramaCard.astro";
import Layout from "../layouts/Layout.astro";
import "@fontsource/poppins";
---

<Layout title="Lista E 2023">
    <h1>PROGRAMA</h1>
    <button id="descarregar_pdf">  <img class="pdf-icon" src="/pdf_icon.svg" />  Programa em PDF</button>

    <div class="grid-container">
        <div class="item">
            <ProgramaCard departamento="ação social" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="cooperação e estudantes" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="imagem e comunicação" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="informática" img_src="/programa_capas/Prog informática.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="pedagogia e emprego" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="saúde e ambiente" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="conselho fiscal" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="cultural" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="desportivo" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="recreativo" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="logística" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>
        <div class="item">
            <ProgramaCard departamento="mag" img_src="/programa_capas/recreativo.png"></ProgramaCard>
        </div>

    </div>
</Layout>
  
<script>
    document.getElementById('descarregar_pdf').addEventListener('click', downloadPDF);
    function downloadPDF() {
        const pdfURL = 'https://drive.google.com/u/2/uc?id=1zeKvrfvuCv1yhYZlsWevOUQL4FNeHHN4&export=download'; // replace with the actual URL of the PDF
        const link = document.createElement('a');
        link.href = pdfURL;
        link.download = 'ProgramaListaE.pdf'; // replace with the desired filename
        link.click();
    }
 </script>
<style>
    .grid-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: minmax(100px, auto);
      
    }

    @media (max-width: 1250px) {
        .grid-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .grid-container {
            grid-template-columns: 1fr;
        }
    }

    .pdf-icon{
        width: 20px;
        height: 20px;
        margin-right: 10px;
    }
    #descarregar_pdf{
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Poppins";
        font-size: 1rem;
        background-color: var(--amarelo-escuro);
        padding: 10px 30px 10px 30px;
        box-shadow:  0px 0px 5px 0px var(--roxo-escuro);
    }
    #descarregar_pdf:hover{
        cursor: pointer;
        background-color: var(--roxo-escuro);
        box-shadow:  0px 0px 5px 0px var(--roxo-claro);
        color: white;
        .pdf-icon{
            filter: invert(100%);
   
        }
    }
    h1 {
        text-align: center;
    }
   
</style>